{% extends "layouts/master-admin-login.html.twig" %}
{% block content %}
        <div class="account-pages"></div>
        <div class="clearfix"></div>
        <div class="wrapper-page">
            <div class=" card-box">
            <div class="panel-heading">
            <img class="card-img-top" src="{{ asset('images/sap/sap.png') }}" alt="Card image cap" style="width: 140px;">
                
            </div>

            <div class="panel-body">
            <h3 class="font-bold text-inverse"> LOGIN  DE USUARIOS </h3>
            <form class="form-horizontal m-t-20" action="{{ path('login_check') }}" method="post">

                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" name="_username" type="text" required="" placeholder="{{'Username'|trans}}">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" name="_password" type="password" required="" placeholder="{{'Password'|trans}}">
                    </div>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-block text-uppercase waves-effect waves-light" type="submit">{{'Enter'|trans}}</button>
                    </div>
                </div>
                 <div class="form-group">
            	    <div class="col-sm-12 text-center">
            		{% if error %}
                        <div class="error">{{ error|trans }}</div>
                    {% endif %} 
                    </div>
                </div>
            </form>
            </div>
            </div>
        </div>
{% endblock %}